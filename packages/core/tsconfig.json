{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "es2015",
    "noImplicitAny": true,
    "declaration": true,
    "sourceMap": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ]
  },
  "include": ["src/**"]
}
